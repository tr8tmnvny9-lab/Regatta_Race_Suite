# ── Backend mode ──────────────────────────────────────────────────────────────
# "local"  = use state.json file persistence (default for dev)
# "cloud"  = use Supabase PostgreSQL + Realtime
BACKEND_MODE=local

# ── Supabase (required when BACKEND_MODE=cloud) ───────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ── Fly.io (required for cloud deployment) ────────────────────────────────────
FLY_APP_NAME=regatta-backend
FLY_API_TOKEN=your-fly-token

# ── Backend server ────────────────────────────────────────────────────────────
PORT=3001
BINDADDR=0.0.0.0

# ── UWB Hub ───────────────────────────────────────────────────────────────────
UWB_UDP_PORT=5555
UWB_MULTICAST_GROUP=239.255.0.1
UWB_OCS_THRESHOLD_M=0.10
UWB_MIN_FIX_QUALITY=60

# ── Frontend ──────────────────────────────────────────────────────────────────
VITE_BACKEND_URL=http://localhost:3001
VITE_CLOUD_BACKEND_URL=wss://api.regatta.app
